<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#ff3900">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:id="@+id/closeBtn" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false" android:width="100dp" android:textSize="30dp"
            android:background="#a100fff6"/>
    <view android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          class="com.github.mikephil.charting.charts.LineChart" android:id="@+id/graphView"
          android:layout_alignParentTop="true"
          android:layout_above="@+id/closeBtn" android:layout_alignParentEnd="true"
          android:layout_alignParentStart="true" android:background="#ff3900"/>
</RelativeLayout>